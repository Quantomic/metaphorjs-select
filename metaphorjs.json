{
    "version": "0.1.3",
    "description": "MetaphorJs selector engine (based on YASS)",

    "push": [
        "github"
    ],
    "build": {
        "standalone": {
            "wrap": true,
            "global": true,
            "target": "dist/metaphorjs.select.js",
            "files": [
                "../metaphorjs/src/MetaphorJs.js",
                [
                    "src/metaphorjs.select.js",
                    {
                        "as": "select"
                    }
                ]
            ],
            "expose": [
                "select"
            ]
        },
        "npm": {
            "target": "dist/metaphorjs.select.npm.js",
            "compile": false,
            "wrap": {
                "exported": true,
                "deferred": true,
                "args": ["window"]
            },
            "files": [
                [
                    "src/metaphorjs.select.js",
                    {
                        "as": "select"
                    }
                ]
            ],
            "returns": "select"
        },
        "amd": {
            "target": "dist/metaphorjs.select.amd.js",
            "files": [
                [
                    "src/metaphorjs.select.js",
                    {
                        "returnExports": true
                    }
                ]
            ],
            "define": {
                "name": "metaphorjs-select"
            }
        }
    }
}